# ============================================================
# AI Diet Tracker - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- OpenAI (Option A: Primary AI) ---
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Supabase ---
# Your project URL and SERVICE ROLE key (not the anon/publishable key)
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://spifuhesobaxrywbxnga.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Supabase Storage bucket for food images
SUPABASE_STORAGE_BUCKET=food_images

# --- Custom Model (Option B: ML Model) ---
# Path to your trained custom model weights (after training)
CUSTOM_MODEL_PATH=models/food_classifier.pth

# Whether to use custom model alongside OpenAI (hybrid mode)
USE_CUSTOM_MODEL=false

# Confidence threshold: if custom model confidence < this, fallback to OpenAI
CUSTOM_MODEL_CONFIDENCE_THRESHOLD=0.75

# --- USDA FoodData Central API (optional, for nutrition lookup) ---
# Get your key from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key-here

# --- Server ---
HOST=0.0.0.0
PORT=8000
DEBUG=true
